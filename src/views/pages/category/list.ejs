<% layout("layout/boilerplate") -%>
<%- include("../../layout/header.ejs") %>

<div class="container mt-5 jumbotron">
  <div class="d-flex justify-content-between align-items-end">
    <h1>Categories</h1>
    <a class="btn btn-primary" href="/category/add">Add</a>
  </div>
  <hr>
  <% if(categories.length === 0){ %>
    <p align="center">No category found</p>
  <% } %>
  <% categories.forEach((category)=>{ %>
    <div class="category-item">
      <div class="name"><%= category.name %></div>
      <div class="btn-container">
        <a class="btn btn-warning" href="/category/edit/<%= category._id %>">Edit</a>
        <form action="/category/delete" method="POST" class="d-inline">
          <button class="btn btn-danger" name="_id" value="<%= category._id %>">Delete</button>
        </form>
      </div>
    </div>
  <% }) %>
</div>